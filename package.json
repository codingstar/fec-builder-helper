{
  "name": "fec-builder-helper",
  "displayName": "Fec-Builder Helper",
  "description": "helper for fec-builder",
  "version": "0.0.3",
  "publisher": "codingyjt",
  "repository": {
    "type": "git",
    "url": "https://github.com/codingstar/fec-builder-helper"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.loadSchema"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.loadSchema",
        "title": "FEC: Load build-config.json schema"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Fec-builder Helper Config",
      "properties": {
        "fecBuilderHelper.path": {
          "type": "string",
          "default": "",
          "description": "本地 fec-builder 的安装目录"
        }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
